<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShareTechApp.Views.AboutPage"
             Title="About ShareTech"> <!-- 앱 이름 여기에 삽입하기 -->
    <!-- Layout children in two rows -->
    <Grid RowDefinitions="Auto,*">
        <!-- Layout children vertically -->
        <StackLayout Grid.Row="1"
                     Margin="20"
                     Spacing="20">
            <Label FontSize="22">
                <Label.FormattedText>
                    <FormattedString>
                        <FormattedString.Spans>
                            <Span Text="RollingRess"
                                  FontAttributes="Bold"
                                  FontSize="22" />
                            <Span Text=" × ShareTech" />
                        </FormattedString.Spans>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label Text=""/>
            <Label Text="고양국제고등학교 창의진로프로젝트 셰어텍" />
            <Label Text="김다연, 조수경, 변유경, 정재윤, 나선우" />
            <Button Text="아무 기능 없는 버튼"
                    Clicked="OnButtonClicked" />
        </StackLayout>
    </Grid>
</ContentPage>